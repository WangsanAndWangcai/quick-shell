{
  "name": "quick-shell",
  "displayName": "Quick Shell",
  "description": "快速执行预定义的Shell命令，支持自定义工作目录和配置文件",
  "version": "0.0.1",
  "icon": "HugeiconsBash.svg",
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/quick-shell"
  },
  "keywords": [
    "shell",
    "command",
    "terminal",
    "automation",
    "productivity"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "quick-shell.execute",
        "title": "Quick Shell"
      },
      {
        "command": "quick-shell.selectConfig",
        "title": "Quick Shell: Select Config File"
      }
    ],
    "configuration": {
      "title": "Quick Shell",
      "properties": {
        "quickShell.configPath": {
          "type": "string",
          "default": "quick-shell.yaml",
          "description": "Path to the quick shell configuration file relative to workspace root"
        },
        "quickShell.workingDirectory": {
          "type": "string",
          "default": "",
          "description": "Default working directory for shell commands (relative to workspace root)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  },
  "dependencies": {
    "js-yaml": "^4.1.1"
  }
}
